<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <dingw.com.newversion.customview.TopBar
        android:id="@+id/topbar_myactivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:centerText="@string/my"
        >

    </dingw.com.newversion.customview.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview_my"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

            <dingw.com.newversion.customview.SuperTextView
                android:id="@+id/textview_myactivitycancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                custom:solid="@color/mytextcolorcancel"
                android:text="@string/cancel"
                android:textSize="20sp"
                custom:corner="5dp"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>