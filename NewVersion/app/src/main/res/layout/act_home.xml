<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <dingw.com.newversion.customview.TopBar
        android:id="@+id/topbar_homactivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        app:centerText="@string/work"
        app:centerTextColor="@color/mywhite"
        app:centerTextSize="6sp"/>

        <FrameLayout
            android:id="@+id/framelayout_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@color/voilet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_home"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/lvshizimeiti">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="end|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_add"
                    android:id="@+id/imageview_homeadd"
                    />
            </LinearLayout>
        </FrameLayout>



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/fragment_wait"-->
        <!--android:name="com.oa12348.Fragment.Fragment_Wait"-->
        <!--/>-->

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearlayout_wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linearlayout_waitimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/wait_pre" />

            <TextView
                android:id="@+id/linearlayout_waittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/wait"
                android:textColor="@color/mytextcolorblue"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_work"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linearlayout_workimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/work_up" />

            <TextView
                android:id="@+id/linearlayout_worktext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/work"
                android:textColor="@color/mytextcolorgray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_complateform"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linearlayout_complateimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/plateform_up" />

            <TextView
                android:id="@+id/linearlayout_complatetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/plateform"
                android:textColor="@color/mytextcolorgray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_community"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linearlayout_comimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/community_up" />

            <TextView
                android:id="@+id/linearlayout_comtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/communtity"
                android:textColor="@color/mytextcolorgray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
