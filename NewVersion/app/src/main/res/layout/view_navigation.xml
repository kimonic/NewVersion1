<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/textitem_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textitem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weidaozhang"
            android:textStyle="bold"
            android:textColor="@color/mytextcolororange"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textitem_fengexian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myxiahuaxian" />
    </LinearLayout>

</LinearLayout>
